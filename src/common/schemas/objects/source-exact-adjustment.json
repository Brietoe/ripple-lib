{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "sourceExactAdjustment",
  "type": "object",
  "properties": {
    "address": {
      "$ref": "address",
      "description": "The address to send from."
    },
    "amount": {
      "$ref": "laxAmount",
      "description": "An exact amount to send. If the issuer is not specified, amounts with any issuer may be used. (This field cannot be used with source.maxAmount)"
    },
    "tag": {"$ref": "tag"}
  },
  "required": ["address", "amount"],
  "additionalProperties": false
}
